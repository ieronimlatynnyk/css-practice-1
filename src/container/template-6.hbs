<header class='header row g-0'>
  <div class='col-3'>
    {{>logo}}
  </div>

  <nav class='header_nav col-9'>
    <div class='header_nav_right'>
      {{>nav list=header}}
    </div>
  </nav>
</header>

<main class="main">
  <!--  -->
   
  {{#with info}}
  <div class="info_content">
    <h1 class="info_title">{{title}}</h1>
    <p class="info_text">{{description}}</p>
  </div>
  {{/with}}

  {{#with form}}
    <form class="form">
      <h2 class="form_title">{{title}}</h2>

      <div class="form_input_list">
        {{#each inputs}}
          <input 
          type="{{type}}" 
          placeholder="{{placeholder}}" 
          class="form_input" 
          name="{{name}}"
          id="form-input-{{id}}" />
        {{/each}}
      </div>

      <div class="form_checkbox">
        <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
        <div></div>
        <label for="{{checkbox.name}}">{{checkbox.label}}</label>
      </div>

      <button type="submit" class="form_button">{{button}}</button>
      <p class="form_info">{{info}}</p>
    </form>
  {{/with}}
</main>

{{#with updates}}
    <div class="messages">
      <h1 class="messages_title">{{title}}</h1>

      {{#each list}}
        <div class="msg">
          <span class="msg_card"></span>
          <div class="msg_post">
            <strong class="msg_name">{{nickname}}</strong>
            <p class="message_text">{{description}}</p>
          </div>
        </div>
      {{/each}} 


      <a href="#" class="messages_link">All messages</a>
    </div>
  {{/with}}

  <div class="expirience">
    {{#with expirience}}
    <div class="expirience_title">
      {{title}}
    </div>
    <div class="exp_cards">
    {{#each list}}
      <div class="expirience_card">
        <strong class="expirience_card_title">{{name}}</strong>
        <p class="expirience_card_text">{{details}}</p>
      </div>
    {{/each}}
    </div>
    {{/with}}
  </div>

